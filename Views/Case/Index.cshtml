@model Ares.Models.CaseIndexModel
@{
    ViewBag.Title = "Payment Page";
    ViewBag.Current = "Payment";
}

<div id="content-header">
    <div id="breadcrumb"> <a href="index.html" title="Go to School Page" class="tip-bottom"><i class="icon-home"></i> Okul Sayfası</a></div>
</div>
<div class="container-fluid">
    <ul class="quick-actions">
        <li class="bg_lb"> <a href="#"> <i class="icon-plus-sign-alt"></i> Gelir Ekle </a> </li>
        <li class="bg_lr"> <a href="#"> <i class="icon-minus-sign"></i> Gider Ekle</a> </li>
    </ul>
    <div class="row-fluid">
        <div class="widget-box">
            <div class="widget-title bg_lg">
                <span class="icon"><i class="icon-signal"></i></span>
                <h5>Para Akışı</h5>
            </div>
            <div class="widget-content">
                <div class="row-fluid">
                    <div class="span9">
                        <div class="chart" hidden="hidden"></div>
                    </div>
                    <div class="span3">
                        <ul class="site-stats">
                            <li class="bg_db" style="width:100%"><i class="icon-plus"></i> <strong>@Model.TotalMount</strong> <small>Toplam Gelir</small></li>
                            <li class="bg_lb"><i class="icon-plus"></i> <strong>120</strong> <small>Bugünkü Gelir</small></li>
                            <li class="bg_lb"><i class="icon-shopping-cart"></i> <strong>656</strong> <small>Bugünkü Gider</small></li>
                            <li class="bg_lb"><i class="icon-tag"></i> <strong>9540</strong> <small>Bu Ayki Gelir</small></li>
                            <li class="bg_lb"><i class="icon-repeat"></i> <strong>10</strong> <small>Bu Ayki Gider</small></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-signal"></i> </span>
                    <h5>Çizelge</h5>
                </div>
                <div class="widget-content">
                    <div class="pie"></div>
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-th"></i></span>
                    <h5>Gider</h5>
                </div>
                <div class="widget-content nopadding">
                    <table id="PaymentList" class="table table-bordered data-table">
                        <thead>
                            <tr>
                                <th>Hesap</th>
                                <th>Toplam</th>
                            </tr>
                        </thead>
                        <tbody role="alert" aria-live="polite" aria-relevant="all">
                            <tr class="gradeA odd">
                                <td class="  sorting_1"><a>Kredi Kartı</a></td>
                                <td class=" "><a>1000</a></td>
                            </tr>
                            <tr class="gradeA odd">
                                <td class="  sorting_1"><a>Nakit</a></td>
                                <td class=" "><a>1000</a></td>
                            </tr>
                            <tr class="gradeA odd">
                                <td class="  sorting_1"><a>Çek</a></td>
                                <td class=" "><a>1000</a></td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-th"></i></span>
                    <h5>Gelir</h5>
                </div>
                <div class="widget-content nopadding">
                    <table id="PaymentList" class="table table-bordered data-table">
                        <thead>
                            <tr>
                                <th>Ödeme Tipi</th>
                                <th>Miktar</th>
                                <th>Açıklama</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
